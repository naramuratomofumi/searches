<div class="box">
  <h2>SIGN UP</h2>
  <%= form_with model: @user, url: user_registration_path, methot: :post, class: 'new_user', local: true do |f| %>
    <%= render "layouts/error_messages", model: f.object %>

    <div class="field">
      <%= f.label :nickname %><br />
      <%= f.text_field :nickname, placeholder:"例) searches花子", maxlength:"40"%>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder:"PC、携帯どちらでも可" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      <%= f.password_field :password, autocomplete: "off" , placeholder:"6文字以上の半角英数字"%>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :好きな色 %><br />
      <%= f.collection_select(:fav_col_id, Color.all, :id, :name, {}, {class:"color"}) %>
    </div>

    <div class="actions">
      <%= f.submit "SIGN UP" %>
    </div>

    <h3>アカウントをお持ちですか？</h3>
    <p class='info-text'>※こちらからログインしてください</p>
    <div class="actions">
      <%= link_to 'SIGN IN', user_session_path, class: "sign-up" %>
    </div>
  <% end %>
</div>
