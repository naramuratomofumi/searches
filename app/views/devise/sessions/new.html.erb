<div class="box">
  <h2>SIGN IN</h2>
  <%= form_with model: @user, url: user_session_path, methot: :post, class: 'new_user', local: true do |f| %>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "SIGN IN" %>
    </div>

    <h3>アカウントを持ってないですか？</h3>
    <p class='info-text'>※こちらからアカウントを作成してください</p>
    <div class="actions">
      <%= link_to 'SIGN UP', new_user_registration_path, class: "sign-up" %>
    </div>
  <% end %>
</div>

