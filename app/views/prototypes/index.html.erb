<header class="header">
  <div class="inner">
    <div class="nav">
      <div class="nav__left">
        <%= link_to "SEARCHES", root_path, class: :logo %>
      </div>
      <% if user_signed_in?%>
        <div class="nav__right">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
          <%= link_to "New Proto",new_prototype_path, class: :nav__btn %>
        </div>
      <% else %>
      <% end %>
    </div>
  </div>
</header>
<div class="wrapper">

  <div class='side'>
    <div class='user_name'>
      <%= "こんにちは #{current_user.nickname}さん"%>
    </div>
    <div class='search_index'>
      <%= '<Go Search>'%>
    </div>
  </div>
  <div class='main'>
    <div class="index-text">
      New
    </div>
    
    <div class='index_image_content'>
      <div class="b">
        <% @prototypes.each do |prototype| %>
          <%=link_to prototype_path(prototype.id) do %>
            <%= image_tag prototype.image.variant(resize: '300x200'), class: "prototype_image" %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="index-text">おすすめ</div>
    <div class='index_image_content'>
    </div>

    <div class="index-text">人気</div>
    <div class='index_image_content'>
      <div class="b">
        <% @like_rank.each do |prototype| %>
          <%=link_to prototype_path(prototype.id) do %>
            <%= image_tag prototype.image.variant(resize: '300x200'), class: "prototype_image" %>
          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>